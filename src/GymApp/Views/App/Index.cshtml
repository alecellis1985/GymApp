@using System.Threading.Tasks
@using GymApp.Models
@model IEnumerable<GymApp.Models.Plan>
@{
    ViewBag.Title = "Home Page";
}
<div class="row">

    <div class="col-xs-12 col-md-6">
        <h2>Alec's Gym APP First part</h2>
        <p>Este gym va a roxear</p>
    </div>
    <div class="col-xs-12 col-md-6">
        <h2>Second Part</h2>
        <p>Este gym va a explotar</p>
    </div>
    <div class="col-xs-12">
        <h1>Plan</h1>
        @foreach (var plan in Model)
        {
            <table>
                <thead>
                    <tr>
                        <th>@plan.Name</th>
                        <th>Series</th>
                        <th>Reps</th>
                        @for (var i = 1; i <= plan.DaysDuration; i++)
                        {
                            <th>@i</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var workout in plan.Workouts)
                {
                        <tr>
                            <td>
                                @workout.Name
                            </td>
                            <td>@workout.Series</td>
                            <td>@workout.Reps</td>
                            @for (var i = 1; i <= plan.DaysDuration; i++)
                            {
                                <td>&nbsp;</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
